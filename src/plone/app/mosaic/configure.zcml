<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="plone">

  <!-- Include our dependencies -->
  <includeDependencies package="." />

  <genericsetup:registerProfile
      name="default"
      title="Plone App Mosaic profile"
      description="Installs plone app mosaic."
      directory="profiles/default"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <!-- Backwards compatibility profile -->
  <configure zcml:condition="have plone-4">
    <genericsetup:registerProfile
        name="bbb"
        title="Mosaic App Mosaic profile for Plone 4"
        directory="browser/bbb/profiles/default"
        description="Installs plone app mosaic."
        for="Products.CMFPlone.interfaces.IPloneSiteRoot"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />
  </configure>

  <include package=".browser" />


  <!-- Register the resource traverser -->
  <adapter
      name="pagelayout"
      for="* zope.publisher.interfaces.IRequest"
      provides="zope.traversing.interfaces.ITraversable"
      factory=".resource.PageLayoutTraverser"
      />

  <!-- Register vocabulary -->
  <utility
      component=".resource.AvailablePageLayoutsVocabularyFactory"
      name="plone.availablePageLayouts"
      />

  <plone:static type="sitelayout"
                name="flavor-1" directory="layouts/site-flavor-1" />
  <plone:static type="sitelayout"
                name="flavor-2" directory="layouts/site-flavor-2" />
  <plone:static type="sitelayout"
                name="flavor-3" directory="layouts/site-flavor-3" />
  <plone:static type="pagelayout"
                name="default-document" directory="layouts/default-document" />
  <plone:static type="pagelayout"
                name="default-event" directory="layouts/default-event" />
  <plone:static type="pagelayout"
                name="default-news" directory="layouts/default-news" />

</configure>
